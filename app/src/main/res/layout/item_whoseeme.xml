<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/x20"
    android:layout_marginLeft="@dimen/x30"
    android:layout_marginRight="@dimen/x30"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/edit_bg_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_whoSeeMeMain"
            android:orientation="vertical"
            android:background="@drawable/recycler_item_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_whoSeeMeCompany"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x40"
                android:layout_marginTop="@dimen/x38">
                <ImageView
                    android:id="@+id/iv_whoSeeMeCompanyIcon"
                    android:layout_width="@dimen/x82"
                    android:layout_height="@dimen/x82"
                    android:src="@mipmap/defaultcompany" />
                <RelativeLayout
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_recommendJobCompanyName"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/color_666"
                        android:text="北京英才网联科技有限公司"
                        android:singleLine="true"
                        android:maxEms="14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/x10"
                        android:layout_below="@+id/tv_recommendJobCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_whoSeeMeContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/x28" />
                    </LinearLayout>
                    <TextView
                        android:text="11-15"
                        android:id="@+id/tv_whoSeeMeTime"
                        android:textSize="@dimen/x24"
                        android:textColor="@color/color_999"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/x20"
                android:id="@+id/ll_whoSeeMePosition"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_whoSeeMePosition"
                    android:textSize="@dimen/x28"
                    android:singleLine="true"
                    android:maxLength="12"
                    android:textColor="@color/new_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ll_whoSeeMeText1"
                    android:textSize="@dimen/x28"
                    android:text="等"
                    android:textColor="@color/color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_whoSeeMePositionNum"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/new_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ll_whoSeeMeText2"
                    android:textSize="@dimen/x28"
                    android:text="个职位在招"
                    android:textColor="@color/color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/arrowright"
                    android:layout_gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x18" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cl_chooseJob"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/resumeContent_bg"
            app:layout_constraintBottom_toTopOf="@+id/ll_chooseJob"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_above="@+id/rl_chosenJob"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/lv_chooseJobTitleMaxTerm"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                </ListView>
                <ListView
                    android:id="@+id/lv_chooseJobTitleMinTerm"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:scrollbars="none"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_chosenJob"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:padding="@dimen/x30"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_chosenJobTitle"
                    android:textSize="@dimen/x28"
                    android:text="@string/chosenJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/tv_chosenJobTitle"
                    android:id="@+id/tv_chosenJobTitleNum"
                    android:textSize="@dimen/x28"
                    android:text="5"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/new_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/tv_chosenJobTitleNum"
                    android:id="@+id/tv_chosenJobTitleNumType"
                    android:textSize="@dimen/x28"
                    android:text="/5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.hr.ui.view.MyFlowLayout
                    android:id="@+id/fl_chooseJobContent"
                    android:layout_below="@+id/tv_chosenJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.hr.ui.view.MyFlowLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_chooseJob"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/save"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x90"
                android:layout_marginRight="@dimen/x90"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/x36"
                android:layout_marginBottom="@dimen/x56"
                android:layout_height="@dimen/x80" />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:text="@string/confirm"
                android:textSize="@dimen/x36"
                android:background="@color/new_main"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x74"
        app:borderWidth="0dp"
        android:id="@+id/cv_selectNum"
        app:cardCornerRadius="@dimen/x37"
        android:layout_marginBottom="@dimen/dimen_120dp"
        app:useCompatPadding="true"
        android:layout_marginRight="@dimen/x34"
        app:cardBackgroundColor="@color/new_main"
        android:layout_gravity="right|bottom"
        android:layout_height="@dimen/x74" >
        <TextView
            android:id="@+id/tv_selectNum"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
</FrameLayout>
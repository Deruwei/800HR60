<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_recommendJobAd"
    android:background="@drawable/recycler_item_selector"
    android:layout_marginBottom="@dimen/x20"
    android:layout_height="@dimen/x280">
    <ImageView
        android:layout_marginBottom="@dimen/x20"
        android:id="@+id/iv_recommendJobAdImage"
        android:layout_marginLeft="@dimen/x31"
        android:layout_marginTop="@dimen/x30"
        android:src="@mipmap/company_bg"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x220" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_recommendJobAdImage"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x30"
        android:layout_height="@dimen/x220">
        <TextView
            android:id="@+id/tv_recommendJobAdTitle"
            android:layout_width="match_parent"
            android:text="@string/accountLogin"
            android:gravity="center_vertical"
            android:textSize="@dimen/x36"
            android:textColor="@color/color_333"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/iv_recommendJobAdImage"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:id="@+id/view_recommendJobAd_line"
                android:layout_width="@dimen/x50"
                android:layout_centerVertical="true"
                android:background="@color/color_666"
                android:layout_height="@dimen/x1"/>
            <TextView
               android:layout_toRightOf="@id/view_recommendJobAd_line"
                android:textSize="@dimen/x24"
                android:layout_centerVertical="true"
                android:id="@+id/tv_recommendJobAd_des"
                android:layout_marginLeft="@dimen/x6"
                android:text="英才网联招聘季！快来参加！"
                android:textColor="@color/color_666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
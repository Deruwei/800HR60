<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_resumeTitleWidth"
    android:orientation="vertical"
    android:background="@drawable/button_resumedefault"
    android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/button_resumedefault"
        android:id="@+id/tv_itemResumeTitle"
        android:textSize="@dimen/item_resumeTitle"
        android:text="赵航的简历"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:layout_width="@dimen/item_resumeTitleWidth"
        android:layout_height="@dimen/item_resumeTitleHeight" />
    <RelativeLayout
        android:id="@+id/rl_itemResumePreview"
        android:background="@color/resumeContent_bg"
        android:layout_width="@dimen/item_resumeTitleWidth"
        android:paddingBottom="@dimen/item_resumeContent_marginTop"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ItemResumeIcon"
            android:layout_marginTop="@dimen/item_resumeContent_marginTop"
            android:src="@mipmap/resume1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/item_resumeContent_marginTop"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_ItemResumeIcon"
            android:textSize="@dimen/item_resumeComplete_textSize"
            android:id="@+id/tv_discoveryMultipleResumesComplete"
            android:textColor="@color/resumeComplete"
            android:text="@string/completeRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_discoveryMultipleResumesPreview"
            android:layout_below="@+id/tv_discoveryMultipleResumesComplete"
            android:text="@string/preview"
            android:gravity="center"
            android:textSize="@dimen/item_resumeComplete_textSize"
            android:textColor="@color/resumePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_itemResumeSetDefault"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="@dimen/item_resumeTitleWidth"
        android:layout_height="@dimen/item_resumeTitleHeight"
        android:background="@drawable/button_resumedefault_bottom"
        android:text="@string/setDefault"
        android:textSize="@dimen/item_resumeTitle" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:wdr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x700">
        <RelativeLayout
            android:background="@drawable/edit_bg"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x82"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/x600"
            android:layout_height="match_parent">
            <com.hr.ui.view.BeerProgressView
                android:id="@+id/pb_update"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                app:beerColor="@color/new_main4"
                app:bubbleColor="@color/new_main2"
                app:bubbleCount="12"
                app:beerProgress="0"
                app:waveMax="100"
                app:waveAmplitude="@dimen/x6"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_updateCancel"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:layout_width="@dimen/x60"
                android:paddingLeft="@dimen/x12"
                android:paddingBottom="@dimen/x12"
                android:layout_height="@dimen/x60"
                android:src="@mipmap/delete_orange"
                />
            <TextView
                android:id="@+id/tv_titleUpdate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x158"
                android:text="@string/versionUpdate"
                android:textSize="@dimen/x36"
                android:textColor="@color/new_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_updateContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_titleUpdate"
                android:layout_above="@+id/tv_updateNow"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/x24"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginBottom="@dimen/x20"
                android:text="@string/comment1"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x28" />
                <TextView
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_updateNow"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg"
                    android:textSize="@dimen/x32"
                    android:gravity="center"
                    android:text="@string/updateNow"
                    android:layout_width="@dimen/x400"
                    android:layout_height="@dimen/x90" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/x600"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@mipmap/update"
                android:layout_width="@dimen/x195"
                android:layout_height="@dimen/x191" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
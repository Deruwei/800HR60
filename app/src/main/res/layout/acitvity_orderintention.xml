<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/in_orderIntention"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x34"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_orderIntention">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/jobIntention"
            android:textColor="@color/color_333"
            android:textSize="@dimen/x52" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x28"
            android:src="@mipmap/program4" />

        <RelativeLayout
           style="@style/fastResume_EditView2">

            <com.hr.ui.view.MyTextView
                android:id="@+id/tv_jobTypeTag"
                style="@style/fastResume_MyTextView"
                android:text="@string/workType"
                />

            <RelativeLayout
                android:id="@+id/rl_jobType"
                 style="@style/fastResume_relativeLayoutContent"
                android:layout_toRightOf="@+id/tv_jobTypeTag">

                <TextView
                    android:id="@+id/tv_jobType"
                   style="@style/fastResume_editView"
                    android:layout_toLeftOf="@+id/iv_jobTypeSelect" />

                <ImageView
                    android:id="@+id/iv_jobTypeSelect"
                    style="@style/fastResume_ImageViewRightIcon"
                    android:src="@mipmap/arrowright" />

                <View
                    android:layout_below="@+id/tv_jobType"
                   style="@style/fastResume_view" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/fastResume_EditView2">

            <com.hr.ui.view.MyTextView
                android:id="@+id/tv_expectedFieldTag"
                style="@style/fastResume_MyTextView"
                android:text="@string/expectedField"
                />

            <RelativeLayout
                android:id="@+id/rl_expectedField"
                style="@style/fastResume_relativeLayoutContent"
                android:layout_toRightOf="@+id/tv_expectedFieldTag">
                <TextView
                    android:id="@+id/tv_expectedField"
                    style="@style/fastResume_editView"
                    android:layout_toLeftOf="@+id/tv_expectedFieldSelect" />
                <ImageView
                    android:id="@+id/tv_expectedFieldSelect"
                    style="@style/fastResume_ImageViewRightIcon"
                    android:src="@mipmap/arrowright" />

                <View
                    style="@style/fastResume_view"
                    android:layout_below="@+id/tv_expectedField" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/fastResume_EditView2">

            <com.hr.ui.view.MyTextView
                android:id="@+id/tv_expectedPositionTag"
                style="@style/fastResume_MyTextView"
                android:text="@string/expectedPosition"
               />

            <RelativeLayout
                android:id="@+id/rl_expectedPosition"
                style="@style/fastResume_relativeLayoutContent"
                android:layout_toRightOf="@+id/tv_expectedPositionTag">

                <TextView
                    android:id="@+id/tv_expectedPosition"
                    style="@style/fastResume_editView"
                    android:layout_toLeftOf="@+id/tv_expectedPositionSelect" />

                <ImageView
                    android:id="@+id/tv_expectedPositionSelect"
                    style="@style/fastResume_ImageViewRightIcon"
                    android:src="@mipmap/arrowright" />

                <View
                    style="@style/fastResume_view"
                    android:layout_below="@+id/tv_expectedPosition" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            style="@style/fastResume_EditView2">

            <com.hr.ui.view.MyTextView
                android:id="@+id/tv_expectedAddressTag"
                style="@style/fastResume_MyTextView"
                android:text="@string/workPlace" />

            <RelativeLayout
                android:id="@+id/rl_expectedAddress"
                style="@style/fastResume_relativeLayoutContent"
                android:layout_toRightOf="@+id/tv_expectedAddressTag">

                <TextView
                    android:id="@+id/tv_expectedAddress"
                    style="@style/fastResume_editView"
                    android:layout_toLeftOf="@+id/tv_expectedAddressSelect" />

                <ImageView
                    android:id="@+id/tv_expectedAddressSelect"
                    style="@style/fastResume_ImageViewRightIcon"
                    android:src="@mipmap/arrowright" />

                <View
                    style="@style/fastResume_view"
                    android:layout_below="@+id/tv_expectedAddress" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            style="@style/fastResume_EditView2">

            <com.hr.ui.view.MyTextView
                android:id="@+id/tv_expectSalaryTag"
                style="@style/fastResume_MyTextView"
                android:text="@string/expectSalary"
              />

            <RelativeLayout
                style="@style/fastResume_relativeLayoutContent"
                android:layout_toRightOf="@+id/tv_expectSalaryTag">

                <EditText
                    android:id="@+id/tv_expectSalary"
                    style="@style/fastResume_editView"
                    android:layout_toLeftOf="@+id/tv_expectSalarySelect"
                    />

                <ImageView
                    android:id="@+id/tv_expectSalarySelect"
                    style="@style/fastResume_ImageViewRightIcon"
                    android:src="@mipmap/close" />

                <View
                    style="@style/fastResume_view"
                    android:layout_below="@+id/tv_expectSalary" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_nextEdu"
            android:layout_marginTop="@dimen/y76"
            android:layout_marginRight="@dimen/x25"
            android:layout_marginLeft="@dimen/x25"
            android:layout_width="match_parent"
            android:background="@drawable/button_login"
            android:layout_height="@dimen/y90">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_complete"
                android:src="@mipmap/smile"
                android:layout_marginRight="@dimen/x12"
                android:layout_width="@dimen/x31"
                android:layout_height="@dimen/y28" />
            <TextView
                android:id="@+id/tv_complete"
                android:text="@string/complete"
                android:layout_centerInParent="true"
                android:textSize="@dimen/x32"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="@dimen/discoveryResumeRv_marginTop"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="@dimen/discoveryResumeRv_marginTop"
            android:gravity="center"
            android:textSize="@dimen/discoveryResumeTitle_textSize"
            android:text="@string/intelligentRobotGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/discoveryResumeRv_marginTop"
            android:layout_marginBottom="@dimen/discoveryResumeRv_marginTop"
            android:src="@mipmap/robot"
            android:scaleType="fitXY"
            android:layout_width="@dimen/robot_width"
            android:layout_height="@dimen/robot_height" />
        <TextView
            android:textSize="@dimen/discoveryResumeTitle_textSize"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_50dp"
            android:text="@string/intelligentRobotHelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/rl_robot"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_robot"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/resumeNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/tv_robot"
                android:id="@+id/rv_robot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <Button
            android:layout_marginTop="@dimen/dimen_80dp"
            android:id="@+id/btn_robotWriteResume"
            android:layout_width="match_parent"
            android:text="@string/alright"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:textSize="@dimen/btn_textSize"
            android:textColor="@color/white"
            android:background="@drawable/button_login"
            android:layout_height="@dimen/et_height" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
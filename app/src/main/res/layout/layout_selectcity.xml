<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_above="@+id/rl_selectCityShow"
                android:layout_below="@+id/view_selectCity"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/lv_selectProvince"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ListView>
                <ListView
                    android:background="@color/resumeContent_bg"
                    android:id="@+id/lv_selectCity"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
            <RelativeLayout
                android:layout_above="@+id/ll_selectCityBottom"
                android:id="@+id/rl_selectCityShow"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_selectedCityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_selectCityTag"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/x28"
                        android:text="@string/selectedCity"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_selectCityTag"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/new_main"
                        android:textSize="@dimen/x28"
                        android:id="@+id/tv_selectCityNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_selectCityNum"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/color_666"
                        android:text="/5"
                        android:textSize="@dimen/x28"
                        android:id="@+id/tv_selectPositionRightTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <com.hr.ui.view.MyFlowLayout
                    android:id="@+id/ll_selectedCity"
                    android:layout_below="@+id/rl_selectedCityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.hr.ui.view.MyFlowLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_selectCityBottom"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90">
                <TextView
                    android:id="@+id/tv_selectCityCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="@string/cancel"
                    android:gravity="center"
                    android:textSize="@dimen/x32"
                    android:background="@color/color_333"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_selectCityOK"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/sure"
                    android:textSize="@dimen/x32"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/new_main"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
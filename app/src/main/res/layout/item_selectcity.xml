<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_itemSelectCity"
        android:layout_width="match_parent"
        android:background="@drawable/recycler_item_selector"
        android:layout_height="@dimen/x100">
    <TextView
        android:id="@+id/tv_itemSelectCityName"
        android:textSize="@dimen/x28"
        android:textColor="@color/color_333"
        android:text="@string/location"
        android:gravity="center"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_itemSelectCityCheck"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x14"
        android:layout_marginRight="@dimen/x21"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/duihao"
        />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/in_findUserPsw_toolbar"
        />
    <LinearLayout
        android:id="@+id/ll_findUserPsw_middle"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/toolbar_marginBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/view_marginLeft"
        android:layout_marginRight="@dimen/view_marginLeft"
        app:layout_constraintTop_toBottomOf="@+id/in_findUserPsw_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height">
            <ImageView
                android:id="@+id/iv_findUserPswEmailIcon"
                android:layout_centerVertical="true"
                android:src="@mipmap/email"
                android:layout_width="@dimen/iv_loginIconWidth"
                android:layout_height="@dimen/iv_loginIconHeight"
                />
            <EditText
                android:layout_marginLeft="@dimen/et_marginTop"
                android:layout_toRightOf="@+id/iv_findUserPswEmailIcon"
                android:id="@+id/et_findUserPswEmailNumber"
                android:layout_width="match_parent"
                android:textColor="@color/color_333"
                android:layout_height="@dimen/et_height"
                android:textColorHint="@color/view_color"
                android:background="@null"
                android:textSize="@dimen/et_textSize"
                android:hint="@string/email"
                />
        </RelativeLayout>
        <View
            android:background="@color/view_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/et_marginTop"
            android:layout_height="@dimen/et_height">
            <ImageView
                android:id="@+id/iv_findUserPswUserNameIcon"
                android:layout_centerVertical="true"
                android:src="@mipmap/person"
                android:layout_width="@dimen/iv_loginIconWidth"
                android:layout_height="@dimen/iv_loginIconHeight"
                />
            <EditText
                android:layout_marginLeft="@dimen/et_marginTop"
                android:layout_toRightOf="@+id/iv_findUserPswUserNameIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_height"
                android:background="@null"
                android:inputType="textPassword"
                android:id="@+id/et_findUserPswUserName"
                android:textSize="@dimen/et_textSize"
                android:textColor="@color/color_333"
                android:textColorHint="@color/view_color"
                android:hint="@string/accountNumber"
                />
        </RelativeLayout>
        <View
            android:background="@color/view_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"/>
        <Button
            android:id="@+id/btn_findUserPswOK"
            android:layout_marginTop="@dimen/btn_marginTop"
            android:layout_width="match_parent"
            android:text="@string/findAccountPsw"
            android:textSize="@dimen/btn_textSize"
            android:textColor="@color/white"
            android:background="@drawable/button_login"
            android:layout_height="@dimen/et_height" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height">

            <TextView
                android:id="@+id/tv_findUserPswToUserPhoneFindPsw"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_666"
                android:gravity="center"
                android:textSize="@dimen/et_textSize"
                android:layout_width="wrap_content"
                android:text="@string/findPswUsePhone"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
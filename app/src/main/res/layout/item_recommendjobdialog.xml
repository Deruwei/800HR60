<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x161"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <RelativeLayout
       android:id="@+id/rl_itemRecommendJobDialog"
       android:layout_width="@dimen/x90"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_height="0dp">
       <CheckBox
           android:layout_centerInParent="true"
           android:id="@+id/cb_itemRecommendJobDialog"
           android:layout_width="@dimen/x28"
           android:background="@drawable/checkbox_bg"
           android:button="@null"
           android:layout_height="@dimen/x28" />
   </RelativeLayout>

    <TextView
        android:id="@+id/tv_itemRecommendJobDialogJobName"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="@dimen/x32"
        app:layout_constraintLeft_toRightOf="@+id/rl_itemRecommendJobDialog"
        app:layout_constraintRight_toLeftOf="@+id/tv_itemRecommendJobDialogSalary"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_itemRecommendJobDialogCompanyName"
        android:textSize="@dimen/x24"
        android:singleLine="true"
        android:textColor="@color/color_666"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemRecommendJobDialogJobName"
        app:layout_constraintLeft_toRightOf="@+id/rl_itemRecommendJobDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_itemRecommendJobDialogSalary"
        android:textSize="@dimen/x32"
        android:paddingRight="@dimen/x39"
        android:singleLine="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/new_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_itemRecommendJobDialogAddress"
        android:textColor="@color/color_999"
        android:textSize="@dimen/x24"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintLeft_toRightOf="@+id/rl_itemRecommendJobDialog"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemRecommendJobDialogCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_itemRecommendJobDialogDate"
        android:textSize="@dimen/x24"
        android:textColor="@color/color_999"
        android:layout_marginTop="@dimen/x10"
        android:paddingRight="@dimen/x39"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemRecommendJobDialogCompanyName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/color_999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/x1"
        />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/in_selectJobOrder"
        layout="@layout/layout_base_edit_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/ll_selectJobOrder"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectIndustry"
                android:layout_width="wrap_content"
                android:text="你好"
                android:drawablePadding="5dp"
               android:layout_centerInParent="true"
                android:drawableRight="@mipmap/zhinengxuanze_xiala"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectTerritory"
                android:layout_width="wrap_content"
                android:text="你好"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/zhinengxuanze_xiala"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectJob"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:text="你好"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/zhinengxuanze_xiala"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ebebeb"
        />
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/rl_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_industryName"
                android:text="期望行业"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
          <LinearLayout
              android:layout_below="@+id/tv_industryName"
              android:orientation="horizontal"
              android:id="@+id/ll_industryItems"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_industry"
            android:id="@+id/rl_territory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_territoryName"
                android:text="期望行业"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_below="@+id/tv_territoryName"
                android:orientation="horizontal"
                android:id="@+id/gl_territoryItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </GridLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_territory"
            android:id="@+id/rl_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_JobName"
                android:text="期望行业"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_below="@+id/tv_JobName"
                android:orientation="horizontal"
                android:id="@+id/gl_jobItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/cl_selectOptions"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/in_selectJobOrder"
        layout="@layout/layout_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/ll_selectJobOrder"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="@dimen/x87">
        <RelativeLayout
            android:id="@+id/rl_selectIndustry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/color_333"
                android:id="@+id/tv_selectIndustry"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/selectIndustry"
                android:textSize="@dimen/x32"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_selectIndustry"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectIndustry"
                android:src="@mipmap/down" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_selectTerritory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectTerritory"
                android:layout_width="wrap_content"
                android:text="@string/selectField"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_selectTerritory"
                android:layout_width="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/x7"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectTerritory"
                android:src="@mipmap/down" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_selectJob"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectJob"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:text="@string/choosePosition"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_selectJob"
                android:layout_width="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/x7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectJob"
                android:src="@mipmap/down" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="@dimen/x1"
        android:background="#ebebeb"
        />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_resumeJobOrder"
        app:layout_constraintTop_toBottomOf="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
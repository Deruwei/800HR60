<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/in_selectJobOrder"
        layout="@layout/layout_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/ll_selectJobOrder"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="@dimen/x87">
        <RelativeLayout
            android:id="@+id/rl_selectIndustry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/color_333"
                android:id="@+id/tv_selectIndustry"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/selectIndustry"
                android:textSize="@dimen/x32"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_selectIndustry"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectIndustry"
                android:src="@mipmap/down" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_selectTerritory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectTerritory"
                android:layout_width="wrap_content"
                android:text="@string/selectField"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_selectTerritory"
                android:layout_width="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/x7"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectTerritory"
                android:src="@mipmap/down" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_selectJob"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_selectJob"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:text="@string/choosePosition"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_selectJob"
                android:layout_width="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/x7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_selectJob"
                android:src="@mipmap/down" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_selectJobOrder"
        android:layout_width="0dp"
        android:layout_height="@dimen/x1"
        android:background="#ebebeb"
        />
    <RelativeLayout
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        app:layout_constraintTop_toBottomOf="@+id/view_selectJobOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_marginTop="@dimen/x27"
            android:layout_marginBottom="@dimen/x27"
            android:id="@+id/rl_industry"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_industryName"
                android:text="期望行业"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
          <LinearLayout
              android:layout_below="@+id/tv_industryName"
              android:orientation="horizontal"
              android:id="@+id/ll_industryItems"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x27"
            android:layout_marginBottom="@dimen/x27"
            android:layout_below="@+id/rl_industry"
            android:id="@+id/rl_territory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_territoryName"
                android:text="@string/expectedField"
                android:textSize="@dimen/x32"
                android:textColor="@color/color_333"
                android:layout_marginBottom="@dimen/x27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.hr.ui.view.MyFlowLayout
                android:layout_below="@+id/tv_territoryName"
                android:orientation="horizontal"
                android:id="@+id/gl_territoryItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.hr.ui.view.MyFlowLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x27"
            android:layout_marginBottom="@dimen/x27"
            android:layout_below="@+id/rl_territory"
            android:id="@+id/rl_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_JobName"
                android:text="@string/expectedPosition"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_marginBottom="@dimen/x27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.hr.ui.view.MyFlowLayout
                android:layout_below="@+id/tv_JobName"
                android:orientation="horizontal"
                android:id="@+id/gl_jobItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.hr.ui.view.MyFlowLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_selectBottom"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_selectJobOrderSave"
                android:textSize="@dimen/x36"
                android:text="@string/save"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/x50"
                android:background="@drawable/button_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90" />
            <TextView
                android:id="@+id/tv_selectJobOrderDelete"
                android:text="@string/deleteOrderInfo"
                android:layout_width="wrap_content"
                android:textSize="@dimen/x32"
                android:textColor="@color/color_333"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x80"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/cl_splash"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rl_loginOrRegister"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x50"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x50">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_companySplash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@+id/iv_welComeBack"
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x28"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company"
                />
                <ImageView
                    android:layout_marginRight="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_welComeBack"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_arrow"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/y18" />
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/y144"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/logo"
                    android:layout_width="@dimen/x374"
                    android:layout_height="@dimen/y342" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y182"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y240">
            <RelativeLayout
                android:layout_gravity="center"
                android:background="@drawable/button_fpage"
                android:id="@+id/rl_login"
                android:visibility="gone"
               android:gravity="center"
                android:layout_width="@dimen/x598"
                android:layout_height="@dimen/y100">
                <ImageView
                    android:layout_toLeftOf="@+id/tv_loginText"
                    android:src="@mipmap/login"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/x29"
                    android:layout_height="@dimen/y28" />
               <TextView
                   android:id="@+id/tv_loginText"
                   android:textColor="@color/new_main"
                   android:textSize="@dimen/x36"
                   android:text="@string/login"
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/x39"
                android:layout_gravity="center"
                android:background="@drawable/button_fpage"
                android:layout_width="@dimen/x598"
                android:layout_height="@dimen/y100"
                android:layout_below="@+id/rl_login"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/rl_register">
                <ImageView
                    android:layout_toLeftOf="@+id/tv_registerText"
                    android:src="@mipmap/register"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/x29"

                    android:layout_height="@dimen/y28" />
                <TextView
                    android:id="@+id/tv_registerText"
                    android:textColor="@color/new_main"
                    android:textSize="@dimen/x36"
                    android:layout_centerInParent="true"
                    android:text="@string/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/y110"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView

                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_bottom"
                    android:layout_width="@dimen/x210"
                    android:layout_height="@dimen/y97" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:clipToPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_jobSearchFragmentTop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x87">
                <RelativeLayout
                    android:id="@+id/rl_jobSearchFragmentType"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_jobSearchFragmentBack"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/x88"
                        android:layout_height="@dimen/x30">
                        <ImageView
                            android:layout_marginLeft="@dimen/x30"
                            android:src="@mipmap/back"
                            android:layout_width="@dimen/x14"
                            android:layout_height="@dimen/x30" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_searchResultBack"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x70"
                    android:layout_toRightOf="@+id/rl_jobSearchFragmentType"
                    android:background="@drawable/edit_bg_ccc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x58">
                    <ImageView
                        android:id="@+id/iv_searchResultIcon"
                        android:layout_marginLeft="@dimen/x34"
                        android:src="@mipmap/search"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24" />
                    <TextView
                        android:id="@+id/tv_searchResultName"
                        android:layout_marginLeft="@dimen/x20"
                        android:textSize="@dimen/x24"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/iv_searchResultIcon"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="@dimen/x80">
                <RelativeLayout
                    android:id="@+id/rl_jobSearchFragmentSelectCity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jobSearchFragmentSelectCity"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/x28"
                        android:text="@string/city"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_jobSearchFragmentSelectCity"
                        android:src="@mipmap/down"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_toRightOf="@+id/tv_jobSearchFragmentSelectCity"
                        android:layout_width="@dimen/x8"
                        android:layout_height="@dimen/x7" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_jobSearchFragmentSelectOther"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jobSearchFragmentSelectOther"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/x28"
                        android:text="@string/other"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_jobSearchFragmentSelectOther"
                        android:src="@mipmap/down"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_toRightOf="@+id/tv_jobSearchFragmentSelectOther"
                        android:layout_width="@dimen/x8"
                        android:layout_height="@dimen/x7" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_jobSearchFragmentSelectLingYu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jobSearchFragmentSelectLingYu"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_main"
                        android:textSize="@dimen/x28"
                        android:text="@string/selectDeliver"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
    </LinearLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:id="@+id/view_jobSearchFragment"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.hr.ui.view.XRecyclerView
                        android:layout_above="@+id/cv_searchResult"
                        android:id="@+id/rv_jobSearchFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.hr.ui.view.XRecyclerView>
                    <android.support.v7.widget.CardView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/cv_searchResult"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="@dimen/x3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rl_searchResultDeleteInABatches"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x95">
                            <CheckBox
                                android:id="@+id/cb_searchResultSelectAll"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_width="wrap_content"
                                android:theme="@style/My_CheckBox"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_searchResultSelectAllName"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/cb_searchResultSelectAll"
                                android:text="@string/selectAll"
                                android:textColor="@color/new_main"
                                android:textSize="@dimen/x32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/searchResultNoSelectNum"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/x20"
                                android:textSize="@dimen/x28"
                                android:text="@string/selectTip1"
                                android:layout_toLeftOf="@+id/tv_searchResultDeliverAll"
                                android:layout_toRightOf="@+id/tv_searchResultSelectAllName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/tv_searchResultDeliverAll"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x32"
                                android:text="@string/deliverAll"
                                android:background="@color/new_main"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/x280"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            <include layout="@layout/layout_emptyview"/>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
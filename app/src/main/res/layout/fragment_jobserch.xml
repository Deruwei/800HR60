<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:clipToPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rl_jobSearchFragmentTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/x2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x87">

                    <RelativeLayout
                        android:id="@+id/rl_jobSearchFragmentType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <RelativeLayout
                            android:id="@+id/rl_jobSearchFragmentBack"
                            android:layout_width="@dimen/x88"
                            android:layout_height="@dimen/x30"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="@dimen/x14"
                                android:layout_height="@dimen/x30"
                                android:layout_marginLeft="@dimen/x30"
                                android:src="@mipmap/back" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchResultBack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x58"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x70"
                        android:layout_toRightOf="@+id/rl_jobSearchFragmentType"
                        android:background="@drawable/edit_bg_ccc">

                        <ImageView
                            android:id="@+id/iv_searchResultIcon"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x34"
                            android:src="@mipmap/search" />

                        <TextView
                            android:id="@+id/tv_searchResultName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_toRightOf="@+id/iv_searchResultIcon"
                            android:singleLine="true"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/x24" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <RelativeLayout
                        android:id="@+id/rl_jobSearchFragmentSelectCity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_jobSearchFragmentSelectCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/city"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/x28" />

                        <ImageView
                            android:id="@+id/iv_jobSearchFragmentSelectCity"
                            android:layout_width="@dimen/x8"
                            android:layout_height="@dimen/x7"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/tv_jobSearchFragmentSelectCity"
                            android:src="@mipmap/down" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_jobSearchFragmentSelectSalary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_jobSearchFragmentSelectSalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/salary_around"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/x28" />

                        <ImageView
                            android:id="@+id/iv_jobSearchFragmentSelectSalary"
                            android:layout_width="@dimen/x8"
                            android:layout_height="@dimen/x7"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/tv_jobSearchFragmentSelectSalary"
                            android:src="@mipmap/down" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_jobSearchFragmentSelectOther"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_jobSearchFragmentSelectOther"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/other"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/x28" />

                        <ImageView
                            android:id="@+id/iv_jobSearchFragmentSelectOther"
                            android:layout_width="@dimen/x8"
                            android:layout_height="@dimen/x7"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/tv_jobSearchFragmentSelectOther"
                            android:src="@mipmap/down" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/view_jobSearchFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hr.ui.view.XRecyclerView
                    android:background="@color/resumeContent_bg"
                    android:id="@+id/rv_jobSearchFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/cv_searchResult">

                </com.hr.ui.view.XRecyclerView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_searchResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/x3">

                    <RelativeLayout
                        android:id="@+id/rl_searchResultDeleteInABatches"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x95"
                        android:background="@color/white"
                        android:visibility="gone">
                        <RelativeLayout
                            android:id="@+id/rl_searchResultSelectAll"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/cb_searchResultSelectAll"
                            android:layout_width="@dimen/x32"
                            android:layout_height="@dimen/x32"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x31"
                            android:background="@drawable/checkbox_bg"
                            android:button="@null" />

                        <TextView
                            android:id="@+id/tv_searchResultSelectAllName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/cb_searchResultSelectAll"
                            android:text="@string/selectAll"
                            android:textColor="@color/new_main"
                            android:textSize="@dimen/x32" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/searchResultNoSelectNum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_toLeftOf="@+id/tv_searchResultDeliverAll"
                            android:layout_toRightOf="@+id/rl_searchResultSelectAll"
                            android:gravity="center"
                            android:text="@string/selectTip1"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/tv_searchResultDeliverAll"
                            android:layout_width="@dimen/x280"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/new_main"
                            android:gravity="center"
                            android:text="@string/deliverAll"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <include layout="@layout/layout_emptyview" />
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
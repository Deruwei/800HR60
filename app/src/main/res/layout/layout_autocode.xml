<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rl_autocode_background"
   >
    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/x400"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rl_autocode_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:gravity="center">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入图形验证码"
                android:textColor="#333333"
                android:textSize="@dimen/x32" />
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="选择后无法更改"-->
            <!--android:textColor="#333333"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_below="@+id/textView51"-->
            <!--android:layout_centerHorizontal="true" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/vc_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40" />

            <TextView
                android:id="@+id/vc_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="刷新"
                android:textColor="#F39800"
                android:textSize="@dimen/x28" />
            <RelativeLayout
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            <EditText
                android:background="#fff"
                android:id="@+id/vc_code"
                android:textSize="@dimen/x28"
                android:singleLine="true"
                android:layout_marginRight="@dimen/x20"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <View
                    android:layout_below="@+id/vc_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/view_color"
                    />
            </RelativeLayout>
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="280dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="#CCCCCC" />-->

        <!--<View-->
            <!--android:layout_width="280dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="#CCCCCC" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl__item_autocode_confirm"
                android:layout_width="@dimen/x540"
                android:layout_height="@dimen/x80"
                android:background="@drawable/rl_login_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textColor="#fff" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
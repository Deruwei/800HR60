<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/in_resumePersonalInfo"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/in_resumePersonalInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:background="@color/resumeContent_bg"
                />
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="@string/photo"
                    android:textColor="@color/color_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dimen_60dp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeName"
                    android:text="@string/name"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumePersonName"
                    android:layout_toRightOf="@+id/tv_resumeName"
                    android:layout_toLeftOf="@+id/iv_personNameDelete"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursordrawable"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_personNameDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeSex"
                    android:text="@string/sex"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumeSex"
                    android:layout_toRightOf="@+id/tv_resumeSex"
                    android:layout_toLeftOf="@+id/iv_resumeSexSelect"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumeSexSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeBirth"
                    android:text="@string/birth"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumeBirth"
                    android:layout_toRightOf="@+id/tv_resumeBirth"
                    android:layout_toLeftOf="@+id/iv_resumeBirthSelect"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumeBirthSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeLivePlace"
                    android:text="@string/nowAddress"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumeLivePlace"
                    android:layout_toRightOf="@+id/tv_resumeLivePlace"
                    android:layout_toLeftOf="@+id/iv_resumeLivePlaceSelect"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumeLivePlaceSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeWorkTime"
                    android:text="@string/workTime"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumeWorkTime"
                    android:layout_toRightOf="@+id/tv_resumeWorkTime"
                    android:layout_toLeftOf="@+id/iv_resumeWorkTimeSelect"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumeWorkTimeSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:background="@color/resumeContent_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumePhone"
                    android:text="@string/phoneNumber"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumePhone"
                    android:layout_toRightOf="@+id/tv_resumePhone"
                    android:layout_toLeftOf="@+id/iv_resumePhoneSelect"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumePhoneSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">
                <TextView
                    android:id="@+id/tv_resumeEmail"
                    android:text="@string/email"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_resumeEmail"
                    android:layout_toRightOf="@+id/tv_resumeEmail"
                    android:layout_toLeftOf="@+id/iv_resumeEmailDelete"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_resumeEmailDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/resumeContent_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:id="@+id/btn_resumeSave"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:text="@string/save"
                android:textSize="@dimen/btn_textSize"
                android:textColor="@color/white"
                android:background="@drawable/button_login"
                android:layout_height="@dimen/et_height" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
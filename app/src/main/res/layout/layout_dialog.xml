<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e000000">

    <LinearLayout
        android:layout_width="@dimen/x480"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/free_dialog_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_marginTop="@dimen/x41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@+id/title"
                android:layout_centerVertical="true"
                android:src="@mipmap/smile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息提示"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32" />
        </RelativeLayout>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x67"
            android:textSize="@dimen/x28"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/color_333"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x41"
            android:layout_marginBottom="@dimen/x41"
            android:layout_marginRight="@dimen/x61"
            android:text="中的男女都能拿到" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/x28" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/x28"  />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/edit_bg_small_top"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_findMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_item_selector"
            android:orientation="vertical">

            <com.hr.ui.view.RoundCornerImageView
                android:id="@+id/iv_findIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:scaleType="centerCrop"
                android:src="@mipmap/finddefault" />

            <LinearLayout
                android:id="@+id/rl_itemFind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x20">

                <TextView
                    android:id="@+id/tv_findCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:paddingTop="@dimen/x20"
                    android:singleLine="true"
                    android:text="北京英才网联科技有限公司"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/x28" />

                <LinearLayout
                    android:id="@+id/rl_findHide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x20"
                        android:src="@mipmap/companytype" />

                    <TextView
                        android:id="@+id/tv_findCompanyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="国有企业"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/x24" />

                    <ImageView
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x63"
                        android:src="@mipmap/scale" />

                    <TextView
                        android:id="@+id/tv_findCompanyScale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="100-499人"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/x24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
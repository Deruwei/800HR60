<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:background="@color/resumeContent_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:id="@+id/cl_searchJob"
    android:focusableInTouchMode="true"
    android:clipToPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical">
    <RelativeLayout
        android:paddingRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x87">
        <ImageView
            android:id="@+id/iv_jobSearchBack"
            android:src="@mipmap/back"
            android:paddingLeft="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x28"
            android:paddingBottom="@dimen/x28"
            android:paddingRight="@dimen/x37"
            android:layout_width="@dimen/x81"
             />
        <RelativeLayout
            android:id="@+id/rl_jobSearchType"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_jobSearchBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="全文"
                android:textSize="@dimen/x32"
                android:id="@+id/tv_jobSearchType"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@+id/tv_jobSearchType"
                android:layout_width="@dimen/x8"
                android:layout_centerVertical="true"
                android:src="@mipmap/down"
                android:layout_marginLeft="@dimen/x10"
                android:layout_height="@dimen/x7" />

        </RelativeLayout>
        <View
            android:id="@+id/view_middle"
            android:layout_toRightOf="@+id/rl_jobSearchType"
            android:background="@color/color_333"
            android:layout_marginLeft="@dimen/x25"
            android:layout_width="@dimen/x1"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginBottom="@dimen/x27"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_toRightOf="@+id/rl_jobSearchType"
            android:id="@+id/et_jobSearch"
            android:textSize="@dimen/x32"
            android:layout_marginLeft="@dimen/x50"
            android:hint="@string/searchHint"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_jobSearch"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_marginRight="@dimen/x25"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jobSearch"
            android:textSize="@dimen/x32"
            android:text="@string/search"
            android:textColor="@color/new_main"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/x6"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_below="@+id/et_jobSearch"
            android:layout_toRightOf="@+id/view_middle"
            android:layout_toLeftOf="@id/tv_jobSearch"
            android:layout_width="match_parent"
            android:background="@color/color_333"
            android:layout_height="@dimen/x1"/>
    </RelativeLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/x39"
            android:text="@string/searchCondition"
            android:textSize="@dimen/x32"
            android:textColor="@color/color_333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_jobSearchPlace"
            android:layout_marginTop="@dimen/x20"
            android:layout_width="match_parent"
            android:background="@drawable/tv_bg_white"
            android:layout_height="@dimen/x100">
            <TextView
                android:id="@+id/tv_jobSearch1"
                android:textSize="@dimen/x32"
                android:text="@string/area"
                android:layout_marginLeft="@dimen/x35"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_jobSearchPlace"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x25"
                android:gravity="right"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_jobSearch1"
                android:layout_toRightOf="@+id/tv_jobSearch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_jobSearch1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrowright"
                android:layout_marginRight="@dimen/x41"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x18" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_jobSearchIndustry"
            android:background="@drawable/tv_bg_white"
            android:layout_marginTop="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">
            <TextView
                android:id="@+id/tv_jobSearch2"
                android:textSize="@dimen/x32"
                android:text="@string/industry"
                android:layout_marginLeft="@dimen/x35"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_jobSearchIndustry"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x25"
                android:gravity="right"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_jobSearch2"
                android:layout_toRightOf="@+id/tv_jobSearch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_jobSearch2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrowright"
                android:layout_marginRight="@dimen/x41"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x18" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_jobSearchFunction"
            android:background="@drawable/tv_bg_white"
            android:layout_marginTop="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">
            <TextView
                android:id="@+id/tv_jobSearch3"
                android:textSize="@dimen/x32"
                android:text="@string/Function"
                android:layout_marginLeft="@dimen/x35"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_jobSearchFunction"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x25"
                android:gravity="right"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_jobSearch3"
                android:layout_toRightOf="@+id/tv_jobSearch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_jobSearch3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrowright"
                android:layout_marginRight="@dimen/x41"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x18" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_historyTitle"
            android:layout_marginTop="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_333"
                android:textSize="@dimen/x32"
                android:text="@string/historySearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_historyDelete"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/x30"
                android:src="@mipmap/history_delete"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/x30" />
        </RelativeLayout>
        <com.hr.ui.view.MyFlowLayout
            android:layout_marginTop="@dimen/x20"
            android:orientation="horizontal"
            android:id="@+id/rl_jobSearchHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.hr.ui.view.MyFlowLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/x50"
            android:layout_marginBottom="@dimen/x40"
            android:id="@+id/rv_hotSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
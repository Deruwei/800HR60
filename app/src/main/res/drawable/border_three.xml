    <item>
        <shape>         //边框的颜色
            <solid android:color="@color/new_main" />
            <corners android:topLeftRadius="@dimen/x9"
                android:topRightRadius="@dimen/x9"
                />
        </shape>
    </item>

    <item
        android:top="@dimen/x2"
        android:right="@dimen/x2"
